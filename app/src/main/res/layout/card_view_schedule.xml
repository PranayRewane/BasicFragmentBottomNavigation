<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ThemeOverlay.AppCompat.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="0dp"
    app:cardCornerRadius="20dp">

    <TextView
        android:id="@+id/cv_tv_namengo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="10dp"
        android:text="Name"
        android:textColor="@android:color/holo_purple"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/cv_tv_subjectngo"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="subject"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cv_tv_datengo"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="date"
        android:textSize="20dp" />





    <ImageView
        android:id="@+id/image_imgngo"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_gravity="right"

        />


    <ImageView
        android:id="@+id/iv_expbtnngo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/ic_expand_more_black_24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_expandngo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:visibility="visible">
            <TextView
                android:id="@+id/cv_tv_addrngo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="address"
                android:textSize="20dp" />
<!--            <Button-->
<!--                android:id="@+id/btn_apply"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="25dp"-->
<!--                android:layout_marginTop="120dp"-->
<!--                android:text="apply"-->


<!--                />-->

            <TextView
                android:id="@+id/cv_tv_agegroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="age group"

                android:textSize="20dp"
                android:visibility="gone"
                />



        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>